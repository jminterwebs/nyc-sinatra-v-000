<form action="/figures" method="post">

  <br><br>
  <label for="name">Name:</label>
  <input type="text" id="figure_name" name="figure[name]">

  <br><br>
  <label for="titles"><h3>Titles:</h3></label>
    <% Title.all.each do |title| %>
      <li>
        <label for="title_name"><%= title.name %></label>
          <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>">
      </li>
    <% end %>



  <label for="new_title"><h3>Enter new Title</h3></label>
    <input type="text" name="title[name]" id="new_title">


  <label for="landmarks"><h3>Lanmarks:</h3></label>
    <% Landmark.all.each do |landmark| %>
      <li>
        <label for="landmark_name"><%= landmark.name %></label>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>">
      </li>
    <% end %>


    <label for="new_landmark"><h3>Enter new Landmark:</h3></label>
    <label for="landmark">Landmark Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark">

    <label for="year">Year:</label>
    <input type="text" name="landmark[year_completed]">
  <input type="submit" value="Create New Figure">
</form>
